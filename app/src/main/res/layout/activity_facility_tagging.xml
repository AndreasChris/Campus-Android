<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- The main content view -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- The toolbar aka SupportActionBar -->
        <include layout="@layout/toolbar" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                layout="@layout/layout_all_errors"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" />

            <EditText
                android:id="@+id/facility_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/facility_name"
                android:inputType="text" />
            <Spinner
                android:id="@+id/facility_categories_spinner"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/facility_name"/>
            <FrameLayout
                android:id="@+id/current_location_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/save"
                android:layout_below="@+id/facility_categories_spinner"/>

            <Button android:id="@+id/save"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="@string/save" />

        </RelativeLayout>

    </LinearLayout>
    <!-- The navigation drawer -->
    <include layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>