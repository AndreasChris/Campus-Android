<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/material_large_padding"
        android:layout_marginEnd="@dimen/material_large_padding"
        android:hint="@string/enter_name_placeholder"
        android:imeOptions="actionGo"
        android:inputType="textCapWords|textAutoComplete"
        android:textColor="@color/text_dark_primary"
        android:textColorHint="@color/text_dark_secondary"
        android:textCursorDrawable="@drawable/cursor_text_field_colorful" />

</FrameLayout>